<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/update_bg"
        android:orientation="vertical">
        <!-- Title -->
        <TextView
            android:id="@+id/update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <!-- Content -->

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/umeng_update_content"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:focusable="true"
                    android:textSize="16sp"
                    android:text="最新版本已在wifi环境下为您下载完成最新版本已在wifi环境下为您下载完成"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </ScrollView>
        <!-- OK&Cancel Button -->

        <LinearLayout
            android:id="@+id/ll_not_forceinstall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:gravity="center">

            <Button
                android:id="@+id/umeng_update_id_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:background="@drawable/update_install_yellow"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16dp"
                android:text="立即更新"
                android:textColor="#333333" />

            <Button
                android:id="@+id/umeng_update_id_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/update_ignore"
                android:focusable="true"
                android:gravity="center"
                android:textSize="16dp"
                android:text="稍后更新"
                android:textColor="#ffc300" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forceinstall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="45dp"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/update_install_yellow"
                android:focusable="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#333333"
                android:text="立即更新"
                 />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
